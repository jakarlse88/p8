@namespace CalHealth.Blazor.Client.Pages.Booking
@page "/Booking"


<section class="section-padding">

    <div class="container">

        <div class="row d-flex flex-column justify-content-beginning mb-4">
            <h2 class="ser-title">Book an Appointment</h2>
            <hr class="botm-line">
        </div>

        <div class="form-row d-flex justify-content-between align-items-end">

            <div class="col-4">
                <div class="form-group">
                    <label for="consultant-select">Please select a consultant</label>
                    <select id="consultant-select" @bind="@Model.ConsultantId" class="form-control">
                        <option value="" disabled>Select a consultant</option>
                        @{
                            foreach (var consultant in Consultants)
                            {
                                // TODO: handle main component updates using @onchange
                                <option value="@consultant.Id.ToString()">@consultant.FirstName @consultant.LastName, @consultant.Specialty</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="col-3">
                @{
                    if (!string.IsNullOrWhiteSpace(Model.ConsultantId)
                        && Model.ConsultantId != "0")
                    {
                        var minYear = DateTime.Today.ToString("yyyy-MM-dd").Split(" ")[0];
                        var formattedMinYear = minYear.Replace('/', '-');

                        var maxYear = DateTime.Today.AddYears(1).ToString("yyyy-MM-dd").Split(" ")[0];
                        var formattedMaxYear = maxYear.Replace('/', '-');

                        <EditForm EditContext="@DateEditContext">
                            <div class="form-group">
                                <label for="date-select">Please select a date</label>
                                <InputDate id="date-select"
                                           min="@formattedMinYear"
                                           max="@formattedMaxYear"
                                           @bind-Value="@Model.Date"
                                           placeholder="DD/MM/YYYY"
                                           class="form-control"/>
                            </div>
                        </EditForm>
                    }
                }

            </div>

            <div class="col-3">
                @{
                    if (!string.IsNullOrWhiteSpace(Model.ConsultantId)
                        && Model.ConsultantId != "0")
                    {
                        <div class="form-group">
                            <label for="date-select">Please select among a time</label>
                            <select id="date-select" class="form-control" @bind="@Model.TimeSlotId">
                                @foreach (var timeSlot in TimeSlots)
                                {
                                    <option value="@timeSlot.Id">@timeSlot.StartTime.ToString("HH:mm") - @timeSlot.EndTime.ToString("HH:mm")</option>
                                }
                            </select>
                        </div>
                    }
                }
            </div>

        </div>

        <div class="row d-flex flex-column justify-content-center mb-4">
            <div class="col-12 text-center">
                <button class="btn btn-success" @onclick="@HandleSubmit" disabled="@(Status == APIOperationStatus.POST_Pending)">
                    Submit 
                    @{
                        if (Status == APIOperationStatus.POST_Pending)
                        {
                            <i class="fas fa-spinner fa-spin"></i>
                        }
                        else
                        {
                            <i class="fas fa-paper-plane"></i>
                        }
                    }
                </button>
            </div>
            </div>
    </div>

</section>